{
  "name": "soulflow-orchestrator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run test",
    "dev": "cd workspace && tsx watch --clear-screen=false ../src/main.ts",
    "dev:once": "cd workspace && tsx ../src/main.ts",
    "health:phi4": "tsx src/phi4-health.ts"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.15.0",
    "eslint": "^10.0.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "@types/better-sqlite3": "^7.6.13",
    "@vercel/beautiful-mermaid": "^0.1.5",
    "better-sqlite3": "^12.6.2",
    "markdown-to-markdown-sanitizer": "^1.1.3",
    "pdf-lib": "^1.17.1",
    "zod": "^4.3.6"
  }
}
